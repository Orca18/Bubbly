<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/feed_basic_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/google" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/feed_basic_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/spoqa_bold"
                    android:maxLines="1"
                    android:text="유저명"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="\u0040"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/feed_basic_userID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="사용자"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="ㆍ"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/feed_basic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="1h"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/feed_basic_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_more_vert_24" />
            </LinearLayout>


            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/feed_basic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bubble Text - 버블 내용"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/feed_basic_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">


                <LinearLayout
                    android:id="@+id/feed_basic_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/feed_basic_like_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_outline_favorite_border_24" />

                    <TextView
                        android:id="@+id/feed_basic_likecount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feed_basic_reply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/feed_basic_reply_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_outline_chat_bubble_outline_24" />

                    <TextView
                        android:id="@+id/feed_basic_reply_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feed_basic_retweet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/feed_basic_retweet_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_outline_bubble_chart_24" />


                    <TextView
                        android:id="@+id/feed_basic_retweet_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/feed_basic_share_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_baseline_share_24" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/partial_line" />
</LinearLayout>