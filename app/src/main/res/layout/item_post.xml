<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginVertical="4dp">


    <TextView
        android:id="@+id/tv_com_name"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginLeft="76dp"
        android:ellipsize="end"
        android:fontFamily="@font/spoqa_regular"
        android:maxLines="1"
        android:text="커뮤니티명"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/ll_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@color/white"
            app:civ_border_color="@color/gray"
            app:civ_border_width="0.6dp"
            app:civ_border_overlay="true"
            android:id="@+id/iv_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="유저명"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="\u0040"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/feed_basic_userID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="사용자"
                    android:textSize="15dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ㆍ"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1D"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_more_vert_24" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bubble Text - 버블 내용"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                card_view:cardElevation="0dp"
                android:background="@drawable/bg_circle4"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <ImageView
                    android:adjustViewBounds="true"
                    android:maxHeight="340dp"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_media" />

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">


                <LinearLayout
                    android:id="@+id/layout_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_like_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_outline_favorite_border_24"
                        app:tint="@color/blueblack" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/blueblack"
                        android:id="@+id/tv_like_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_reply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        app:tint="@color/blueblack"
                        android:id="@+id/iv_reply_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_outline_chat_bubble_outline_24" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/blueblack"
                        android:id="@+id/tv_reply_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_retweet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:transitionName="recycleimage"
                        app:tint="@color/blueblack"
                        android:id="@+id/iv_retweet_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_outline_bubble_chart_24" />


                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/blueblack"
                        android:id="@+id/tv_retweet_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/iv_share_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_baseline_share_24"
                        app:tint="@color/blueblack" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />
</LinearLayout>