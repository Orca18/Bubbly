<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/joined_com_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="112.5dp"
            app:cardCornerRadius="3dp">

            <ImageView
                android:id="@+id/joined_com_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#333"/>

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/joined_com_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/spoqa_bold"
                    android:maxLines="1"
                    android:text="그룹명"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/item_commu_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_more_vert_24" />
            </LinearLayout>


            <TextView
                android:id="@+id/joined_com_desc"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="최대 2줄, ... 표시"/>


            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_group_24"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/joined_com_members"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.7천명"
                    android:textColor="@color/black"
                    android:textSize="16dp" />





            </LinearLayout>


            <ImageView
                android:layout_marginTop="4dp"
                android:background="@drawable/shadow"
                android:id="@+id/item_commu_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="100dp"/>

            <Button
                android:id="@+id/joined_com_btn"
                android:textColor="@color/white"
                android:backgroundTint="@color/blueblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입함"/>



       </LinearLayout>
    </LinearLayout>

    <include layout="@layout/partial_line" />
</LinearLayout>