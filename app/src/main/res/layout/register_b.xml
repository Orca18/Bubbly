<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_registerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_bold"
            android:text="아이디/비밀번호 설정"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#ccc"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="44dp"
                    android:fontFamily="@font/spoqa_bold"
                    android:text="아이디"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="44dp"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="\u0040사용자 아이디는 고유한 나만의 아이디입니다.\n나중에 언제든 바꿀 수 있습니다"
                    android:textSize="12dp" />


                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_radius"
                    android:hint=" 아이디 (띄어쓰기 없는 영숫자 조합)"
                    android:inputType="text"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/rss_et_cursor"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/tv_id_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="3dp"
                    android:text=""
                    android:textSize="14dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="44dp"
                    android:fontFamily="@font/spoqa_bold"
                    android:text="비밀번호"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_radius"
                        android:hint=" 비밀번호 (영숫자, 특수문자 포함 8-16자리)"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/rss_et_cursor"
                        android:textSize="14dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_password_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_radius"
                        android:enabled="false"
                        android:hint=" 비밀번호 확인"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/rss_et_cursor"
                        android:textSize="14dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pw_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="44dp"
                    android:fontFamily="@font/spoqa_bold"
                    android:text="닉네임"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


                <EditText
                    android:id="@+id/et_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_radius"
                    android:hint=" 자유롭게 입력하세요 (중복 가능) "
                    android:inputType="text"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/rss_et_cursor"
                    android:textSize="14dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="14dp"
                    android:fontFamily="@font/spoqa_bold"
                    android:text="완료"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_register"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/linear_layout"
            app:layout_constraintEnd_toEndOf="@+id/linear_layout"
            app:layout_constraintStart_toStartOf="@+id/linear_layout"
            app:layout_constraintTop_toTopOf="@+id/linear_layout" />

        <TextView
            android:id="@+id/register_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="게정 생성중.."
            android:textSize="30dp"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/linear_layout"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_register" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>