<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_applyNFT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_bold"
            android:text="NFT 신청"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#ccc"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="44dp"
            android:fontFamily="@font/spoqa_bold"
            android:text="NFT 미리보기"
            android:textSize="18dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_item_layout_applyNFT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_image_applyNFT"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/blank_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_user_nick_applyNFT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:text="유저명"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="\u0040"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_user_id_applyNFT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="사용자"
                            android:textSize="15dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ㆍ"
                            android:textSize="15dp" />

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_time_applyNFT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1D"
                            android:textSize="15dp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_more_vert_24" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_content_applyNFT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bubble Text - 버블 내용"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        card_view:cardElevation="0dp"
                        android:background="@drawable/bg_circle4"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:adjustViewBounds="true"
                            android:maxHeight="340dp"
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/iv_media_applyNFT" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
        </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="44dp"
            android:fontFamily="@font/spoqa_bold"
            android:text="NFT 이름"
            android:textSize="18dp"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/et_assetName_applyNFT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_radius"
            android:hint="빈칸 기능"
            android:inputType="text"
            android:maxLength="16"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/rss_et_cursor"
            android:textSize="14dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bt_apply_applyNFT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_apply_applyNFT"
            android:layout_marginVertical="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_bold"
            android:textColor="@color/white"
            android:text="신청"
            android:textSize="18dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>