<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/com_info_edit_rl"
        android:layout_width="match_parent"
        android:layout_height="190dp">


        <ImageView
            android:id="@+id/com_info_edit_titleimage"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/white" />


        <TextView
            android:id="@+id/com_info_edit_titleimage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_circle4"
            android:fontFamily="@font/spoqa_medium"
            android:padding="10dp"
            android:text="커뮤니티 커버 사진 설정"
            android:textColor="@color/text_black"
            android:textSize="18dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="#ddd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="커뮤니티명"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>

    <EditText
        android:id="@+id/com_info_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_circle4"
        android:fontFamily="@font/spoqa_regular"
        android:hint="커뮤니티명 지정"
        android:maxLength="20"
        android:padding="10dp"
        android:paddingHorizontal="6dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:text="소개"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>

    <EditText
        android:id="@+id/com_info_edit_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_circle4"
        android:fontFamily="@font/spoqa_regular"
        android:hint="커뮤니티 소개"
        android:maxLength="20"
        android:padding="10dp"
        android:paddingHorizontal="6dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="규칙"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>


    <EditText
        android:id="@+id/com_info_edit_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_circle4"
        android:fontFamily="@font/spoqa_regular"
        android:hint=""
        android:maxLength="20"
        android:padding="10dp"
        android:paddingHorizontal="6dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        android:background="#ddd" />


    <Button
        android:id="@+id/com_info_edit_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/blueblack"
        android:fontFamily="@font/spoqa_bold"
        android:paddingVertical="10dp"
        android:text="저장하기"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>