<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/com_info_detail_rl"
        android:layout_width="match_parent"
        android:layout_height="190dp">


        <ImageView
            android:id="@+id/com_info_detail_titleimage"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/white" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="#ddd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="대표"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/com_info_changeowner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위임"
            android:textColor="@color/red"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_com_member_ll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_com_member_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/white"
            app:civ_border_color="#ccc"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_com_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_bold"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u0040"
                    android:textColor="@color/text_black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/item_com_member_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textColor="@color/text_black"
                    android:textSize="16dp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="4dp"
        android:background="#ddd" />


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="커뮤니티명"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/com_info_detail_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/spoqa_medium"
        android:text="커뮤명"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="소개"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/com_info_detail_desc"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/spoqa_medium"
        android:text="Bubbly"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="규칙"
            android:textColor="@color/text_black"
            android:textSize="22dp"
            android:textStyle="bold" />


    </LinearLayout>


    <TextView
        android:id="@+id/com_info_detail_rule"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        android:background="#ddd" />


    <Button
        android:id="@+id/com_info_edit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/blueblack"
        android:fontFamily="@font/spoqa_bold"
        android:paddingVertical="10dp"
        android:text="수정하기"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>