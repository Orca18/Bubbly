<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:backgroundTint="#FAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_nft_ss_profile_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nft_itemNFT_ssProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F0F0"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/no_img_box" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_sell"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_itemNFT_ssProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="11pt"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="10 Bubble" />

            <Button
                android:id="@+id/bt_buy_itemNFT_ssProfile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                android:layout_weight="5"
                android:text="BUY"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>