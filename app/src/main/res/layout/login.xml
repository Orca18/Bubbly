<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:fontFamily="@font/round_bold"-->
    <!--        android:text="로그인"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textColor="@color/white"-->
    <!--        android:textSize="25dp" />-->


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/white"
        app:titleTextColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="20dp" />


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/chocolate"
            android:text="Bubbly"
            android:textColor="@color/black"
            android:textSize="50dp" />


        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_medium"
            android:text="노바랜드 디앱 프로젝트"
            android:textSize="14dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_radius"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/rss_et_cursor"
            android:textSize="14dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />


        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_radius"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:textCursorDrawable="@drawable/rss_et_cursor"
            android:textSize="14dp" />




        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/spoqa_medium"
            android:padding="5dp"
            android:textSize="16dp"
            android:text="로그인"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/spoqa_medium"
                android:gravity="right"
                android:text="가입하기"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="#bbbbbb" />

            <TextView
                android:id="@+id/reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/spoqa_medium"
                android:text="계정 찾기"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#ccc"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/spoqa_bold"
                android:text="또는 간편 로그인"
                android:textSize="16dp" />

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#ccc" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:src="@drawable/google"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageView
                android:src="@drawable/skeleton"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>


        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/spoqa_light"
            android:text="novarand.com"
            android:textColor="#222"
            android:textAlignment="center" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>